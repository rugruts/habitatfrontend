# ===================================
# FRONTEND ENVIRONMENT VARIABLES
# Copy this file to .env and fill in your values
# ===================================

# Supabase Configuration (Frontend - Public Keys Only)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Stripe Configuration (Frontend - Publishable Key Only)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
# NOTE: NEVER put VITE_STRIPE_SECRET_KEY in frontend .env - it's a security risk!
# Secret key should only be on backend server

# Site Configuration
VITE_SITE_URL=https://habitatlobby.com
VITE_API_URL=https://your-backend-api.vercel.app/api

# Contact Information
VITE_CONTACT_EMAIL=admin@habitatlobby.com
VITE_CONTACT_PHONE=+30 123 456 7890

# Email API Configuration (Backend)
VITE_EMAIL_API_URL=https://your-backend-api.vercel.app/api
VITE_EMAIL_API_KEY=your_email_api_key_here

# Social Media Integration
VITE_INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
VITE_INSTAGRAM_USERNAME=habitatlobby

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-YOUR_ID_HERE
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# Business Information
VITE_BUSINESS_NAME=Habitat Lobby
VITE_BUSINESS_EMAIL=admin@habitatlobby.com
VITE_BUSINESS_PHONE=+30 243 123 4567
VITE_BUSINESS_ADDRESS=Alexandras 59, Trikala, Greece

# ===================================
# BACKEND ENVIRONMENT VARIABLES
# (Only needed for backend/server.js)
# ===================================

# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration (Backend - Service Role Key)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Stripe Configuration (Backend - Secret Key)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@habitatlobby.com
SMTP_FROM_NAME=Habitat Lobby

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://habitatlobby.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry (Error Tracking - Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# iCal Sync Configuration
ICAL_SYNC_INTERVAL_MINUTES=15
ICAL_FEEDS_ENABLED=true

# Admin Configuration
ADMIN_EMAIL=admin@habitatlobby.com
ADMIN_PASSWORD_RESET_TOKEN_EXPIRY_HOURS=24

